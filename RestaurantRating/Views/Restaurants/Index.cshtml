@model IEnumerable<RestaurantRating.Models.Restaurant>
@{
    ViewData["Title"] = "";
    Boolean isLoggedIn = Context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value != null;
    Boolean isManager = isLoggedIn && Context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role).Value.Equals(UserType.Admin.ToString());
}
<h2 class="header-text">@ViewBag.Title</h2>

<div class="row">
    <form class="col s12" asp-action="Index">
        <div class="row">
            <div class="input-field col s3">
                <i class="material-icons prefix">restaurant</i>
                <input id="icon_restaurant" name="Name" type="text" class="validate">
                <label for="icon_restaurant">Name</label>
            </div>
            <div class="input-field col s3">
                <i class="material-icons prefix">stars</i>
                <input id="rating_range" name="Rating" type="number" min="0" max="5" class="validate">
                <label for="rating_range">Rating</label>
            </div>
            <div class="input-field col s3">
                <i class="material-icons prefix">$</i>
                <input id="price_range" name="Price" min="0" max="5" type="number" class="validate">
                <label for="price_range">Price</label>
            </div>
            <div class="input-field col s3">
                <button type="submit" class="waves-effect waves-light btn"><i class="material-icons left">search</i>Search</button>
            </div>
        </div>
</form>
</div>

<hr />


<div class="row">
    <div class="card-deck">

        @foreach (var restaurant in Model)
        {
        <script>
                $(document).ready(() => {

                    var reviewsCount = 0;

                    var starsSum = 0;
                    var starsAverage = 0;
                    var starsAverageHtml = "";

                    var priceSum = 0;
                    var priceAverage = 0;
                    var priceAverageHtml = "";

                    function drawStars(stars) {
                        var starsHtml = "";
                        for (var i = 0; i < stars; i++) {
                            starsHtml += "<i class='material-icons'>star</i>";
                        };
                        for (var i = 0; i < (5 - stars); i++) {
                            starsHtml += "<i class='material-icons'>star_border</i>";
                        };
                        return (starsHtml);
                    };

                    function drawPrice(price) {
                        var priceHtml = "";
                        for (var i = 0; i < price; i++) {
                            priceHtml += "<i class='material-icons'>$</i>";
                        };
                        return (priceHtml);
                    };

                    starsAverageHtml = drawStars("@restaurant.Rating");
                    (document.getElementById("starsHtml_@restaurant.Id")).innerHTML = starsAverageHtml;

                    priceAverageHtml = drawPrice("@restaurant.PriceLevel");
                    (document.getElementById("priceHtml_@restaurant.Id")).innerHTML = priceAverageHtml;
                });
        </script>
            String src = (restaurant.Image == null) ? "images/Logo.png" : "data:image / png; base64," + Convert.ToBase64String(restaurant.Image);
            <div class="col s4 m4">
                <div class="card small" style="background-color: black">
                @if (isManager)
                {
                    <a asp-action="Delete" asp-route-id="@restaurant.Id" class="btn-floating top-fab waves-effect waves-light red btn-sm"><i class="material-icons">delete_forever</i></a>
                    <a asp-action="Edit" asp-route-id="@restaurant.Id" class="btn-floating halfway-fab waves-effect waves-light btn-sm"><i class="material-icons">edit</i></a>
                }
                <div class="card-image">
                    <a asp-action="Details" asp-route-id="@restaurant.Id">
                        <img class="rounded-circle" src="@src">
                        <small id="intro-text" class="card-title" style="background-color: black; color: whitesmoke;">@restaurant.Name / @restaurant.City</small>
                    </a>
                </div>
                <div class="card-stacked">
                    <div class="card-content text-center">
                        <p style="color: white">@restaurant.Description</p>
                    </div>
                    <div class="card-action">
                        <div class="left" id="starsHtml_@restaurant.Id">
                        </div>
                        <div class="right" id="priceHtml_@restaurant.Id">
                        </div>
                    </div>
                </div>
             </div>
         </div>
        }
    @if (isLoggedIn && isManager)
    {
        <div class="col s4 m4">
            <div class="card-panel" style="background-color: black">
                <div class="text-center">
                    <a asp-action="Create" class="btn-large waves-effect waves-light blue"><i class="material-icons">add</i></a>
                </div>
            </div>
        </div>
    }
    </div>
</div>
<div>
    <div id="ratings-chart" style="height: 370px; width: 100%;"></div>
    <div class="row">
        <div id="genre-chart" class="element1 col-md-5"></div>
        <div id="director-chart" class="element2 col-md-7"></div>
    </div>

</div>
